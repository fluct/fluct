#!/usr/bin/env node

var program = require('commander');
var GenerateCommand = require('../lib/generate_command');
var NewCommand = require('../lib/new_command');
var ServerCommand = require('../lib/server_command');

program
  .command('deploy')
  .description('Deploy functions to AWS')
  .action(function (command) {
    console.log('Comming soon');
  });

program
  .command('generate')
  .arguments('<generator>')
  .arguments('<name>')
  .description('Generate a new resource')
  .action(function (generator, name, command) {
    new GenerateCommand({
      command: command,
      generator: generator,
      name: name
    }).run()
  });

program
  .command('new')
  .arguments('<name>')
  .description('Generate a new application')
  .action(function (name, command) {
    new NewCommand({
      command: command,
      name: name
    }).run()
  });

program
  .command('server')
  .description('Launch a web server')
  .option('-p, --port <number>', 'Run server on the specified port (default: 3000)')
  .action(function (command) {
    new ServerCommand({
      command: command
    }).run();
  });

program.parse(process.argv);
